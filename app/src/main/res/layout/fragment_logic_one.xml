<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LogicOneFragment">

    <ImageView
        android:id="@+id/rectangle_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rectangle"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n = "
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/rectangle_iv"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_iv"/>

    <EditText
        android:id="@+id/rectangle_n_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Width"
        android:text="1"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/tv_n"
        app:layout_constraintTop_toTopOf="@id/tv_n"
        app:layout_constraintBottom_toBottomOf="@id/tv_n"/>

    <TextView
        android:id="@+id/tv_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m = "
        android:textSize="25sp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_iv"
        app:layout_constraintStart_toStartOf="@id/rectangle_iv"
        app:layout_constraintEnd_toEndOf="@id/rectangle_iv"/>

    <EditText
        android:id="@+id/rectangle_m_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Length"
        android:text="1"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/tv_m"
        app:layout_constraintTop_toTopOf="@id/tv_m"
        app:layout_constraintBottom_toBottomOf="@id/tv_m"/>

    <ImageView
        android:id="@+id/square_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/square"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/rectangle_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a = "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/square_iv"
        app:layout_constraintTop_toTopOf="@id/square_iv"
        app:layout_constraintBottom_toBottomOf="@id/square_iv"/>

    <EditText
        android:id="@+id/square_a_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Width"
        android:text="1"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/tv_a"
        app:layout_constraintTop_toTopOf="@id/tv_a"
        app:layout_constraintBottom_toBottomOf="@id/tv_a"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitted square(s) are :"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@id/btn_logic_one_generator"
        app:layout_constraintEnd_toEndOf="@id/btn_logic_one_generator"
        app:layout_constraintStart_toStartOf="@id/btn_logic_one_generator"/>

    <TextView
        android:id="@+id/generated_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_text"
        app:layout_constraintTop_toTopOf="@id/tv_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_text"/>

    <Button
        android:id="@+id/btn_logic_one_generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:backgroundTint="@color/teal_700"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>